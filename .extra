alias hosts="subl /etc/hosts"
alias sysconfig="subl ~/"

export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# PATH
PATH=""
PATH=$PATH:/usr/local/sbin
PATH=$PATH:/usr/local/bin
PATH=$PATH:/usr/sbin
PATH=$PATH:/usr/bin
PATH=$PATH:/sbin
PATH=$PATH:/bin
PATH=$PATH:~/bin

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting

# Homebrew
PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH" # Homebrew Core Utils
PATH="$(brew --prefix homebrew/php/php56)/bin:$PATH" # Homebrew PHP 5.6

# Composer
PATH=~/.composer/vendor/bin:$PATH

# NVM
export NVM_DIR=~/.nvm
. $(brew --prefix nvm)/nvm.sh

export PATH
