#!/bin/bash

unset DOCKER_HOST
unset DOCKER_TLS_VERIFY
unset DOCKER_CERT_PATH

docker pull composer:latest > /dev/null

docker run -i --rm \
  --user $(id -u):$(id -g) \
  -v /etc/passwd:/etc/passwd:ro \
  -v /etc/group:/etc/group:ro \
  -v $HOME/.ssh:/root/.ssh:ro \
  -v $(pwd):/usr/src/ \
  -w /usr/src/ \
  composer:latest "$@"
